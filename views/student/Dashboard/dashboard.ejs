	<script>
		var monthNames = ["Jan", "Feb", "Mar", "Apr", "May", "Jun",
		"Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
		function pad(n) {
			return n<10 ? '0'+n : n;
		}
		function tConvert (time) {
			time = time.toString().match(/^([01]\d|2[0-3])(:)([0-5]\d)(:[0-5]\d)?$/) || [time];

			if (time.length > 1) {
				time = time.slice (1);
				time[5] = +time[0] < 12 ? ' AM' : ' PM'; // Set AM/PM
				time[0] = +time[0] % 12 || 12;
		  	}
		  	return time.join ('');
		}
		function formatDateTime(time){
			time = new Date(time);
			var formatted = time.getDate()+" "
            +monthNames[time.getMonth()]+" "
            +time.getFullYear()+" , "
            +tConvert(pad(time.getHours())+":"
            +pad(time.getMinutes()));
			return formatted;
		}
	</script>
</head>
<body>

<div class="wrapper">
    <div class="sidebar" data-color="red" data-image="/img/sidebar-5.jpg">

    	<div class="sidebar-wrapper">
            <div class="logo">
                <a class="simple-text">
                    <%= info.name %>
                </a>
            </div>

            <ul class="nav">
                <li class="active">
                    <a href="/dashboard_student">
                        <i class="pe-7s-graph"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li>
                    <a href="/dashboard_student/user_profile">
                        <i class="pe-7s-user"></i>
                        <p>User Profile</p>
                    </a>
                </li>
                <li>
                    <a href="/dashboard_student/tests_list">
                        <i class="pe-7s-note2"></i>
                        <p>Tests</p>
                    </a>
                </li>
            </ul>
    	</div>
    </div>

    <div class="main-panel">
		<nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Active Tests</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="/logout">
                                Log out
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

		<div class = "content">
			<div class = "container-fluid">
				<div class = "row">
					<div class = "col-md-12">
					<% if(active_tests.length==0) { %>
						<h4>No Active Tests<br />Check results in Tests Tab</h4>
					<% } %>
					<% for(var i=0;i<active_tests.length;i++) { %>
					<a target="_blank" href="/quiz/<%=active_tests[i].quizid%>" style = "color:black;">
						<div class="blog-card">
							<div class="photo photo1"></div>
							<ul class="details">
								<li class="author"><%= active_tests[i].testsetterid %></li>
								<li class="date">
									Start : <b><script>
										document.write(formatDateTime('<%=active_tests[i].start_time%>'))
									</script></b>
								</li>
								<li class="date">
									End   : <b><script>
										document.write(formatDateTime('<%=active_tests[i].end_time%>'))
									</script></b>
								</li>
							</ul>
							<div class="description">
								<h1 style="display:block;font-size:2em;font-weight:bold;">
									<%= active_tests[i].name %>
								</h1>
								<h2><b>Status : <font color = "Green">Active</font></b></h2>
								<p class="summary">
									<font color = "red">Number of Questions</font> : <%= active_tests[i].num_of_questions %>
								</p>
							</div>
						</div>
					</a>
					<% } %>


					</div>
				</div>
			</div>
		</div>


    </div>
</div>


