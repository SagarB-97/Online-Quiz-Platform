    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="/stylesheets/Dashboard/pe-icon-7-stroke.css" rel="stylesheet" />
	<script>
		var monthNames = ["Jan", "Feb", "Mar", "Apr", "May", "Jun",
		"Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
		function pad(n) {
			return n<10 ? '0'+n : n;
		}
		function tConvert (time) {
			time = time.toString().match(/^([01]\d|2[0-3])(:)([0-5]\d)(:[0-5]\d)?$/) || [time];

			if (time.length > 1) {
				time = time.slice (1);
				time[5] = +time[0] < 12 ? ' AM' : ' PM'; // Set AM/PM
				time[0] = +time[0] % 12 || 12;
		  	}
		  	return time.join ('');
		}
		function formatDateTime(time){
			time = new Date(time);
			var formatted = time.getDate()+" "
            +monthNames[time.getMonth()]+" "
            +time.getFullYear()+" , "
            +tConvert(pad(time.getHours())+":"
            +pad(time.getMinutes()));
			return formatted;
		}
	</script>
</head>
<body>

<div class="wrapper">
    <div class="sidebar" data-color="purple" data-image="/img/sidebar-5.jpg">
    	<div class="sidebar-wrapper">
            <div class="logo">
                <a class="simple-text">
                    <%= info.name %>
                </a>
            </div>

			<ul class="nav">
                <li>
                    <a href="/dashboard_student">
                        <i class="pe-7s-graph"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li>
                    <a href="/dashboard_student/user_profile">
                        <i class="pe-7s-user"></i>
                        <p>User Profile</p>
                    </a>
                </li>
                <li  class="active">
                    <a href="/dashboard_student/tests_list">
                        <i class="pe-7s-note2"></i>
                        <p>Tests</p>
                    </a>
                </li>
            </ul>
    	</div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Tests List</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="/logout">
                                Log out
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">List of Tests</h4>
                            </div>
                            <div class="content table-responsive table-full-width">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <th>ID</th>
										<th>Name</th>
										<th>Total Marks</th>
										<th>Number of Questions</th>
										<th>Start time</th>
										<th>End time</th>
										<th>Result</th>
                                        <th>View Leaderboard</th>
                                    </thead>
                                    <tbody>
										<% for(var i = 0;i<tests_list.length;i++) { %>
                                        <tr>
                                        	<td><%= tests_list[i].quizid %></td>
                                            <td><%= tests_list[i].name %></td>
											<td><%= tests_list[i].total_marks %></td>
											<td><%= tests_list[i].num_of_questions %></td>
											<td>
												<script>
													document.write(formatDateTime('<%=tests_list[i].start_time%>'))
												</script>
											</td>
											<td>
												<script>
													document.write(formatDateTime('<%=tests_list[i].end_time%>'))
												</script>
											</td>
											<td>
												<% if(tests_list[i].test_taken) { %>
													<a href="/quiz/result/<%=tests_list[i].testid%>">View Result</a>
												<% } else { %>
													Not Attempted
												<% } %>
											</td>
                                            <td>
                                                <% if(tests_list[i].test_taken) { %>
                                                    <a href="/leaderboard/<%=tests_list[i].quizid%>">View Leaderboard</a>
                                                <% } else { %>
                                                    Not Attempted
                                                <% } %>
                                            </td>
                                        </tr>
										<% } %>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


</body>

